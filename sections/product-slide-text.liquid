<!-- sections/sticky-text-with-products.liquid -->
<section class="sticky-text-products">
  <div class="container">
    <div class="sticky-text desktop_text_content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn-red">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>

    <div class="products-side">
      <div class="main-image">
        {% if section.settings.main_image %}
          <img src="{{ section.settings.main_image | image_url }}" alt="" class="image-one active-image">
        {% endif %}
        {% if section.settings.scroll_image %}
          <img src="{{ section.settings.scroll_image | image_url }}" 
              alt="" 
              class="image-two" 
              style="opacity:0; position:absolute; top:0; left:0; width:100%;">
        {% endif %}
      </div>
      <div class="sticky-text mobile_text_content">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>
        {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}" class="btn-red">{{ section.settings.button_text }}</a>
        {% endif %}
     </div>
      <div class="products-list">
        {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            {% assign product = all_products[block.settings.product] %}
            <div class="product-item">
              <a href="{{ product.url }}">
              <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
              </a>
              <p><a href="{{ product.url }}">{{ product.metafields.custom.product_name_breadcrumb }} {% if product.metafields.custom.product_color_name != blank %}/{% endif %} <strong>{{ product.metafields.custom.product_color_name }}</strong> </a></p>
                <div class="custom-variant-count">
                  <span class="custom-color" style="background:{{ product.metafields.custom.hexa_code.value }}"></span>
              {% assign paired_products = product.metafields.custom.pair_with_product.value %}
                  {% if paired_products.count > 1 %}
                  + {{ paired_products.count | minus:1 }}<span class="mobile_only"> Colorways</span></span>
                  {% endif %}
              </div>
              <p class="price">₹ {{ product.price | money_without_currency |  remove: '.00'  }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>  
    </div>
  </div>
</section>



