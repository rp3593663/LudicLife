{% comment %} image chnage stop for a scroll then change image on mobile and normal scroll in desktop {% endcomment %}
<script>
  document.addEventListener("DOMContentLoaded", function () {
  const section = document.querySelector('.sticky-text-products');
  const imgOne = section.querySelector('.image-one');
  const imgTwo = section.querySelector('.image-two');

  let isPaused = false;
  let currentImage = 1;
  const stopOffset = 280;
  let lastScrollY = window.scrollY;
  let lastTriggerDirection = null; // "up" or "down"

  window.addEventListener("scroll", function () {
    const rect = section.getBoundingClientRect();
    const viewportCenter = window.innerHeight / 2 + stopOffset;
    const sectionCenter = rect.top + rect.height / 2;

    if (window.innerWidth > 768) {
      // DESKTOP → Normal image change without pause
      if (sectionCenter <= viewportCenter) {
        imgOne.style.opacity = "0";
        imgTwo.style.opacity = "1";
      } else {
        imgOne.style.opacity = "1";
        imgTwo.style.opacity = "0";
      }
      return;
    }

    // MOBILE → Keep the pause logic
    if (isPaused) return;

    const scrollDirection = window.scrollY > lastScrollY ? "down" : "up";
    lastScrollY = window.scrollY;

    if (scrollDirection === "down" && sectionCenter <= viewportCenter && lastTriggerDirection !== "down") {
      triggerPauseAndSwap("down");
    }
    else if (scrollDirection === "up" && sectionCenter >= viewportCenter && lastTriggerDirection !== "up") {
      triggerPauseAndSwap("up");
    }

    function triggerPauseAndSwap(direction) {
      isPaused = true;
      lastTriggerDirection = direction;

      const exactY = window.scrollY + rect.top + rect.height / 2 - viewportCenter;
      window.scrollTo({ top: exactY, behavior: "instant" });

      if (direction === "down") {
        imgOne.style.opacity = "0";
        imgTwo.style.opacity = "1";
        currentImage = 2;
      } else {
        imgOne.style.opacity = "1";
        imgTwo.style.opacity = "0";
        currentImage = 1;
      }

      setTimeout(() => {
        isPaused = false;
      }, 600);
    }
  }, { passive: false });
});
</script>


