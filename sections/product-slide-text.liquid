    { 
      "type": "image_picker", 
      "id": "scroll_image", 
      "label": "Scroll Image" 
    },
    { 
      "type": "text", 
      "id": "button_text", 
      "label": "Button Text", 
      "default": "Discover" 
    },
    { 
      "type": "url", 
      "id": "button_link", 
      "label": "Button Link" 
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select product" }
      ]
    }
  ],
  "presets": [
    { "name": "Sticky Text with Products", "category": "Custom" }
  ]
}
{% endschema %}

