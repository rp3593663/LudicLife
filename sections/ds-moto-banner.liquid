{%- if section.settings.layout == 'box_width' -%}
  {%- assign container = 'container' -%}
{%- else -%}
  {%- assign container = '' -%}
{%- endif -%}

{% assign padding = section.settings.padding | split: "|" %}
{% assign margin  = section.settings.margin | split: "|" %}

{%- style -%}
#shopify-section-{{ section.id }} .section--ds_moto_banner{
  {%- if padding[0] != blank -%} padding: {{ padding[0] }}; {%- endif -%}
  {%- if margin[0] != blank -%} margin: {{ margin[0] }}; {%- endif -%}
}

@media (max-width:1199px){
  #shopify-section-{{ section.id }} .section--ds_moto_banner{
    {%- if padding[1] != blank -%} padding: {{ padding[1] }}; {%- endif -%}
    {%- if margin[1] != blank -%} margin: {{ margin[1] }}; {%- endif -%}
  }
}

@media (max-width:991px){
  #shopify-section-{{ section.id }} .section--ds_moto_banner{
    {%- if padding[2] != blank -%} padding: {{ padding[2] }}; {%- endif -%}
    {%- if margin[2] != blank -%} margin: {{ margin[2] }}; {%- endif -%}
  }
}

@media (max-width:767px){
  #shopify-section-{{ section.id }} .section--ds_moto_banner{
    {%- if padding[3] != blank -%} padding: {{ padding[3] }}; {%- endif -%}
    {%- if margin[3] != blank -%} margin: {{ margin[3] }}; {%- endif -%}
  }
}
{%- endstyle -%}

<section class="ludic-section section--ds_moto_banner">
  <div class="{{ container }}">
    <div class="ds_moto_banner_inner">

      <!-- Banner Image -->
      {% if section.settings.desktop_image != blank %}
        <picture>
          {% if section.settings.mobile_image != blank %}
            <source media="(max-width: 767px)" srcset="{{ section.settings.mobile_image | image_url: width: 900 }}">
          {% endif %}
          <img
            src="{{ section.settings.desktop_image | image_url }}"
            alt="{{ section.settings.heading | escape }}"
            class="ds_moto_banner_bg"
            loading="lazy"
          >
        </picture>
      {% endif %}

      <!-- Content -->
      <div class="ds_moto_banner_content">

        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url }}"
            alt="Logo"
            loading="lazy"
          >
        {% endif %}

        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="ds_moto_btn ds_moto_banner_btn"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}

      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "DS Moto Banner",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "box_width",
      "options": [
        { "value": "full-width", "label": "Full Width" },
        { "value": "box_width", "label": "Box Width" }
      ]
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "An alternate realm of Ludic featuring future from the past."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Discover Futurworks"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "Padding",
      "default": "0px 0px 0px 0px",
      "info": "Desktop | 1200px | 991px | 767px"
    },
    {
      "type": "text",
      "id": "margin",
      "label": "Margin",
      "default": "80px 0px | | | 36px 0px",
      "info": "Desktop | 1200px | 991px | 767px"
    }
  ],
  "presets": [
    {
      "name": "DS Moto Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}