<section
  id="ds-moto-{{ section.id }}"
  class="ds-moto-animate {{ section.settings.custom_class }}"
>
  <div class="container">
    <div class="ds-moto-inner">
      <div class="ds-moto-images">
        <img class="moto-img img-1" src="{{ section.settings.image_1 | image_url }}">
        <img class="moto-img img-2" src="{{ section.settings.image_2 | image_url }}">
      </div>

      <div class="ds-moto-text">
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</section>

<style>
#ds-moto-{{ section.id }} {
  background-image: url(https://cdn.shopify.com/s/files/1/0823/6787/3328/files/BG_LINES.svg?v=1766388068);
  background-size: cover;
  background-position: center;
  min-height: 100vh;
  padding: 100px 0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.ds-moto-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 100px;
}

.ds-moto-images {
  position: relative;
  width: 190px;
  height: 220px;
}

.moto-img {
  position: absolute;
  width: 100%;
  opacity: 0;
}

.img-2 {
  top: -10px;
  left: 52px;
}

.ds-moto-text {
  max-width: 600px;
  text-align: center;
  color: #fff;
  opacity: 0;
  font-size: 28px;
  line-height: 38px;
}

@media (max-width: 767px) {
  .ds-moto-inner { gap: 48px; }
  .ds-moto-text { font-size: 16px; line-height: 24px; }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {

  if (!window.gsap || !window.ScrollTrigger) return;

  gsap.registerPlugin(ScrollTrigger);

  const section = document.getElementById("ds-moto-{{ section.id }}");
  if (!section) return;

  const img1 = section.querySelector(".img-1");
  const img2 = section.querySelector(".img-2");
  const text = section.querySelector(".ds-moto-text");

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: section,
      start: "top bottom-=100", // ðŸ”¥ KEY FIX
      once: true
      // markers: true // enable if you want to debug
    }
  });

  tl.fromTo(img1,
    { x: -200, y: -200, opacity: 0 },
    { x: 0, y: 0, opacity: 1, duration: 1, ease: "power3.out" }
  )
  .fromTo(img2,
    { x: 200, y: -200, opacity: 0 },
    { x: 0, y: 0, rotate: 2, opacity: 1, duration: 1, ease: "power3.out" },
    "-=0.6"
  )
  .fromTo(text,
    { y: 40, opacity: 0 },
    { y: 0, opacity: 1, duration: 0.8, ease: "power3.out" },
    "-=0.4"
  );

  /* ðŸ”¥ FORCE recalculation AFTER scroll-scrub section */
  setTimeout(() => {
    ScrollTrigger.refresh(true);
    window.dispatchEvent(new Event("scroll"));
  }, 500);

});
</script>

{% schema %}
{
  "name": "DS Moto Animated",
  "settings": [
    { "type": "image_picker", "id": "image_1", "label": "Image 1" },
    { "type": "image_picker", "id": "image_2", "label": "Image 2" },
    { "type": "richtext", "id": "text", "label": "Text" },
    { "type": "text", "id": "custom_class", "label": "Custom class" }
  ],
  "presets": [
    { "name": "DS Moto Animated" }
  ]
}
{% endschema %}
