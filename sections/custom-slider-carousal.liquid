<div class="arc-slider-wrapper {{ section.settings.custom_class }}">
  <div class="arc-slider-track" id="arcSlider-{{ section.id }}">
    {% for block in section.blocks %}
      {% if block.settings.slide_image %}
        <div class="arc-image-wrapper">
          <a href="/products/{{ block.settings.slide_product | product_url }}">  
            <img
            src="{{ block.settings.slide_image | image_url: width: 400 }}"
            alt="Arc Image"
            class="arc-image"
            >
            <div class="arc-image-content">
              <p class="slide-product-name">{{ block.settings.slide_product.metafields.custom.product_name_breadcrumb }} / <span class="slide-product-color">{{ block.settings.slide_product.metafields.custom.product_color_name }}</span></p>
              <p class="slide-product-price">₹ {{ block.settings.slide_product.price | money_without_currency |  remove: '.00'  }}</p>
              
              </div>
            </a>
          </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="slider-text-main">
    <div class="slider-text-wrapper">
      <div class="slider-text-content">
        <h2>This here is it. Just slide in.</h2>
        <p>Cloud-like comfort & solid support in Ludic proprietary CloudFrame<sup>™</sup></p>
        <a href="/collections/sliders" class="slide-text-button">Discover</a>
      </div>
    </div>
  </div>
</div>

