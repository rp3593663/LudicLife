<script>
document.addEventListener("DOMContentLoaded", () => {
  const container = document.getElementById("arcSlider-{{ section.id }}");
  const wrappers = Array.from(container.querySelectorAll('.arc-image-wrapper'));
  // const visibleCount = 5;
  const isMobile = window.innerWidth <= 768;
  const visibleCount = isMobile ? 3 : 5;
  const speed = isMobile ? 0.6 : 1;      // slower on mobile
  const radius = isMobile ? 50 : 150;
  const containerWidth = container.offsetWidth || window.innerWidth;
  const spacing = containerWidth / visibleCount;
  const buffer = spacing; // For looping
  const totalImagesNeeded = visibleCount * 3;

  while (wrappers.length < totalImagesNeeded) {
    const clones = wrappers.map(wrapper => {
      const clone = wrapper.cloneNode(true);
      container.appendChild(clone);
      return clone;
    });
    wrappers.push(...clones);
  }

  const imgData = wrappers.map((wrapper, i) => {
    const img = wrapper.querySelector('img');
    img.style.width = `${spacing}px`;
    img.style.position = 'absolute';
    img.style.transition = 'transform 0.2s ease-out';
    img.style.willChange = 'transform';
    wrapper.style.position = 'absolute';
    wrapper.style.opacity = 1;
    wrapper.style.pointerEvents = 'auto';
    return {
      wrapper,
      img,
      x: i * spacing
    };
  });

  let isPaused = false;

  // Pause only on image hover
  imgData.forEach(data => {
    data.wrapper.addEventListener('mouseenter', () => isPaused = true);
    data.wrapper.addEventListener('mouseleave', () => isPaused = false);
  });

  function animate() {
    if (!isPaused) {
      const centerOffset = spacing / 2;

      imgData.forEach((data) => {
        data.x -= speed;

        // Recycle if completely out of screen to the left
        if (data.x < -buffer) {
          const maxX = Math.max(...imgData.map(d => d.x));
          data.x = maxX + spacing;
        }

        const screenX = data.x;
        const progress = screenX / containerWidth;
        const angle = Math.PI * progress;
        const y = radius - Math.sin(angle) * radius;

        data.wrapper.style.transform = `translate(${screenX - centerOffset}px, ${y}px)`;
        data.wrapper.style.opacity = 1; // Always visible
        data.wrapper.style.pointerEvents = 'auto';
      });
    }

    requestAnimationFrame(animate);
  }

  animate();
});

</script>



