                <!-- Submit -->
                <button type="submit" class="ds-submit-btn">
                    Submit
                </button>

                 <!-- Privacy Checkbox -->
                <div class="ds-privacy">
                    <label>
                        <input type="checkbox" name="privacy" checked required>
