<script>

  document.querySelectorAll('.product-pointer').forEach(pointer => {
  let hideTimeout;
  const isMobile = window.matchMedia("(max-width: 768px)").matches;
  const delay = isMobile ? 1000 : 500;

  pointer.addEventListener('mouseenter', () => {
    clearTimeout(hideTimeout);
    pointer.classList.add('active');
  });

  pointer.addEventListener('mouseleave', () => {
    hideTimeout = setTimeout(() => {
      pointer.classList.remove('active');
    }, delay); // 500ms delay
  });

  const tooltip = pointer.querySelector('.pointer-tooltip');
  tooltip.addEventListener('mouseenter', () => {
    clearTimeout(hideTimeout);
    pointer.classList.add('active');
  });
  tooltip.addEventListener('mouseleave', () => {
    hideTimeout = setTimeout(() => {
      pointer.classList.remove('active');
    }, delay);
  });
});

// --- Show intro tooltip for first visible pointer ---


window.addEventListener('DOMContentLoaded', () => {
  const isMobile = window.matchMedia("(max-width: 768px)").matches;
  const storageKey = isMobile ? 'pointerIntroShownMobile' : 'pointerIntroShownDesktop';

  if (sessionStorage.getItem(storageKey)) return;

  // Collect target pointers
  let targetPointers = [];
  if (isMobile) {
    targetPointers = document.querySelectorAll('.Pointer-2');
  } else {
    const p1 = document.querySelector('.Pointer-1');
    if (p1) targetPointers = [p1];
  }

  if (!targetPointers.length) return;

  // Force open all
  targetPointers.forEach(ptr => ptr.classList.add('active'));

  // Keep open for 1.5s then close
  setTimeout(() => {
    targetPointers.forEach(ptr => ptr.classList.remove('active'));
    sessionStorage.setItem(storageKey, 'true');
  }, 1500);
});

