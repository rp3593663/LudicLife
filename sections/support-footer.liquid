{%- if section.settings.layout == 'box_width' -%}
    {%- assign container = 'container' -%}
  {%- endif -%}
  {% assign padding = section.settings.padding | split: '|' %}
  {% assign margin = section.settings.margin | split: '|' %}
  
  {%- style -%}
      #shopify-section-{{ section.id }} .section--support-footer{
        {%- if padding[0] != blank -%} padding: {{ padding[0] }}; {%- endif -%}
        {%- if margin[0] != blank -%} margin: {{ margin[0] }}; {%- endif -%}
        background: {{ section.settings.bg_color }};
      }
  
      @media (max-width:1199px){
          #shopify-section-{{ section.id }} .section--support-footer{
            {%- if padding[1] != blank -%} padding: {{ padding[1] }}; {%- endif -%}
            {%- if margin[1] != blank -%} margin: {{ margin[1] }}; {%- endif -%}
                }
        }
  
      @media (max-width:991px){
          #shopify-section-{{ section.id }} .section--support-footer{
            {%- if padding[2] != blank -%} padding: {{ padding[2] }}; {%- endif -%}
            {%- if margin[2] != blank -%} margin: {{ margin[2] }}; {%- endif -%}
                }
      }
  
      @media (max-width:767px){
          #shopify-section-{{ section.id }} .section--support-footer{
            {%- if padding[3] != blank -%} padding: {{ padding[3] }}; {%- endif -%}
            {%- if margin[3] != blank -%} margin: {{ margin[3] }}; {%- endif -%}
            }
        }
  {%- endstyle -%}
  
  <section class="ludic-section ludic-section-{{ section.id }} section--support-footer">
    <div class="{{ container }}">
      <div class="support_footer_block">
        <div class="copyright_info">
          <p class="year">@{{ 'now' | date: '%Y' }}</p>
          <p class="company">{{ section.settings.company_copyright_text }}</p>
          <p class="reserved">All Rights Reserved.</p>
        </div>
        <div class="support_time">
          <p>{{ section.settings.company_time_text }}</p>
          {% if section.settings.company_favicon != blank %}
            <img src="{{ section.settings.company_favicon |  image_url }}">
          {% endif %}
        </div>
        <div class="copyright-mobile">
          <p class="year">@{{ 'now' | date: '%Y' }}</p>
          {% if section.settings.company_favicon != blank %}
            <img src="{{ section.settings.company_favicon |  image_url }}">
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Support Footer",
    "settings": [
      {
        "type": "select",
        "id": "layout",
        "options": [
          {
            "value": "full-width",
            "label": "Full Width"
          },
          {
            "value": "box_width",
            "label": "Box Width"
          }
        ],
        "label": "Layout",
        "default": "box_width"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background"
      },
      {
        "type": "text",
        "id": "padding",
        "label": "Padding",
        "default": "0px 0px 0px 0px",
        "placeholder": "top right bottom right",
        "info": "Screen: desktop | 1200px | 991px | 767px"
      },
      {
        "type": "text",
        "id": "margin",
        "label": "Margin",
        "default": "80px 0px | | | 36px 0px",
        "placeholder": "top right bottom right",
        "info": "Screen: desktop | 1200px | 991px | 767px"
      },
      {
        "type": "header",
        "content": "=== General Settings"
      },
      {
        "type": "text",
        "id": "company_copyright_text",
        "label": "Copyright Company Text",
        "default": "Good Chaos Lifestyle Private Limited"
      },
      {
        "type": "textarea",
        "id": "company_time_text",
        "label": "Company Time Info",
        "default": "We're great people to talk to on weekdays. / Our support team is available from Monday to Friday. / 10am to 6pm."
      },
      {
        "type": "image_picker",
        "id": "company_favicon",
        "label": "Footer Favicon Icon"
      }
    ],
    "presets": [
      {
        "name": "Support Footer",
        "category": "section"
      }
    ]
  }
  {% endschema %}
  {% stylesheet %}
  {% endstylesheet %}
  {% javascript %}
  {% endjavascript %}
  