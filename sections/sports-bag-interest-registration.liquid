<script>
  document.addEventListener("DOMContentLoaded", function () {
    const sections = document.querySelectorAll(".video-scroll-wrapper .video-section");
    const dots = document.querySelectorAll(".dot");
    const players = [];
    const videoWrapper = document.querySelector('.video-scroll-wrapper');
    const launchSection = document.querySelector('.launch-section');

    // Initialize Vimeo players
    sections.forEach(section => {
      const iframe = section.querySelector("iframe");
      const player = new Vimeo.Player(iframe);
      players.push(player);
    });

    let isScrolling = false;

    function scrollToSection(index) {
      let top = 0;
      if (index === 0) top = videoWrapper.offsetTop;
      else if (index === 1) top = videoWrapper.offsetTop + window.innerHeight * 1;
      else if (index === 2) top = videoWrapper.offsetTop + window.innerHeight * 2;
      window.scrollTo({ top, behavior: "smooth" });
      isScrolling = true;
      setTimeout(() => {
        isScrolling = false;
        updateActiveSection();
      }, 100);
    }

    function updateActiveSection() {
      if (isScrolling) return;
      let activeIndex = 0;
      sections.forEach((section, index) => {
        const rect = section.getBoundingClientRect();
        if (rect.top >= -1 && rect.top <= window.innerHeight / 2) {
          activeIndex = index;
        }
      });
      dots.forEach(dot => dot.classList.remove("active"));
      dots[activeIndex].classList.add("active");
      players.forEach((player, index) => {
        const title = sections[index].querySelector(".v_title");
        if (index === activeIndex) {
          player.play().catch(() => { });
          if (title) title.style.opacity = "1";
        } else {
          player.pause().catch(() => { });
          if (title) title.style.opacity = "0";
        }
      });
    }

    dots.forEach(dot => {
      dot.addEventListener("click", () => {
        const index = parseInt(dot.dataset.index, 10);
        scrollToSection(index);
      });
    });

    window.addEventListener("scroll", updateActiveSection);
    window.addEventListener("resize", updateActiveSection);

    updateActiveSection();

  });
</script>



