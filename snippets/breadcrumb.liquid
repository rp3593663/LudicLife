<style>#shopify-section-{{ section.id }} .active{font-weight:800}.active:hover{text-decoration: underline;}#shopify-section-{{ section.id }} .full-unstyled-link{text-transform:capitalize;color:#1A1A1A;}</style>
<div class="breadcrumb-main-section">
  <div class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} breadcrumbs-main" style="display:flex;flex-wrap:wrap;column-gap:5px;margin-top:0px;font-size: 10px;line-height:14.3px;letter-spacing: -0.36px;">
    <a class="full-unstyled-link breadcrumbs__link home-link desktop_breadcum" href="/" title="Home">Home</a>
    {% if template contains 'page' %}
      {% if template contains 'support-' and template contains 'page' %}
        <span aria-hidden="true">/</span>
        <a href="{{ pages.support.url }}" class="full-unstyled-link breadcrumbs__link home-link">support</a>
        <span aria-hidden="true">/</span>
        <span class="current">{{ page.title | capitalize }}</span>
      {% else %}
        <span aria-hidden="true">/</span>
        <span class="current">{{ page.title | capitalize }}</span>
      {% endif %}
    {% elsif template contains 'product' %}
        {%  if collection.url %} 
          <span aria-hidden="true">/</span>
          <a class="full-unstyled-link breadcrumbs__link ghnjhm" href="{{ collection.url }}">{{ collection.title | capitalize }}</a>
        {% else %}
          {% for collection in product.collections %} 
            {% if collection.handle == 'footwear' or collection.handle == 'apparel' or collection.handle =='accessories' %}
              <span aria-hidden="true" class="desktop_breadcum">/</span>
              <a class="full-unstyled-link breadcrumbs__link desktop_breadcum" href="{{ collection.url }}">{{ collection.title | capitalize }}</a>
              {% break %}
            {% endif %}  
          {% endfor %}
        {% endif %}
      <span aria-hidden="true" class="desktop_breadcum">/</span>
      {% if product.metafields.custom.product_color_name == blank %}
        <span class="active" style="text-transform:capitalize">
          <a class="full-unstyled-link breadcrumbs__link lkllklkl" href="{{ collection.url }}">{{ product.metafields.custom.product_name_breadcrumb | capitalize }}</a> 
        </span>
      {% else %}
        <a class="full-unstyled-link breadcrumbs__link sfvdfvf" href="{{ collection.url }}">{{ product.metafields.custom.product_name_breadcrumb | capitalize }}</a>
      {% endif %}
      {% if product.metafields.custom.product_color_name != blank %}<span aria-hidden="true">/</span>{% endif %}
      <span class="active" style="text-transform:capitalize">{{ product.metafields.custom.product_color_name | capitalize }}</span>
    {% elsif template contains 'collection' and collection.handle %}
      <span aria-hidden="true">/</span>
      {% if current_tags %}
        {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
        <a class="full-unstyled-link breadcrumbs__link" href="{{ url }}">{{ collection.title | capitalize }}</a>
        <span aria-hidden="true">/</span>
        <span>{{ current_tags | join: " + " | capitalize }}</span>
      {% else %}

      {% if collection.handle == 'sliders' or collection.handle == 'nova' or collection.handle == 'eclipse' or collection.handle == 'enhanced-canvas' or collection.handle == 'sneakers' or collection.handle == 'enhanced-canvas-pro' or collection.handle == 'enchanced-canvas-low' %}
        <span class="collection-breadcrumb"><a href="/collections/footwear" class="">Footwear</a></span>
        <span>/</span>
      {% endif %}
      {% if collection.handle == 'enhanced-canvas' or collection.handle == 'nova' or collection.handle == 'eclipse' %}
        <span class="collection-breadcrumb"><a href="/collections/sneakers" class="">Sneakers</a></span>
        <span>/</span> 
      {% endif %}
      {% if collection.handle == 'core-polo' or collection.handle == 'core-hoodies' or collection.handle == 'core-joggers' or collection.handle == 'core-t' or collection.handle == 'chroma-t' or collection.handle == 'evoke-s' or collection.handle == 't-shirt' or collection.handle == 'hoodie' or collection.handle == 'sweatshirt' or collection.handle == 'joggers' %}
        <span class="collection-breadcrumb"><a href="/collections/apparel" class="">Apparel</a></span>
        <span>/</span>
      {% endif %}
      {% if collection.handle == 'fragrance' or collection.handle == 'combo' %}
        <span class="collection-breadcrumb"><a href="/collections/accessories" class="">Accessories</a></span>
        <span>/</span>
      {% endif %}

        <span class="active">{{ collection.title | capitalize }}</span>
        
      {% endif %}
      
    {% elsif template == 'blog' %}
      <span aria-hidden="true">/</span>
      {% if current_tags %}
        <a href="full-unstyled-link breadcrumbs__link" href="{{ blog.url }}">{{ blog.title | capitalize }}</a>
        <span aria-hidden="true">/</span>
        <span>{{ current_tags | join: " + " | capitalize }}</span>
      {% else %}
        <span class="active">{{ blog.title | capitalize }}</span>
      {% endif %}
    {% elsif template == 'article' %}
      <span aria-hidden="true">/</span>
      <a href="full-unstyled-link breadcrumbs__link" href="{{ blog.url }}">{{ blog.title | capitalize }}</a>
      <span aria-hidden="true">/</span>
      <span>{{ article.title | capitalize }}</span>
    {% else %}
     <span aria-hidden="true">/</span>
     <span class="active">{{ page_title | capitalize }}</span>
    {% endif %}

  </div> 
    {% comment %} <div class="custom-variant-count vgfbfgb" id="variantCountBlock">
      <span class="custom-color" style="background:{{ product.metafields.custom.hexa_code.value }}"></span>
     {% assign paired_products = product.metafields.custom.pair_with_product.value %}
      {% if paired_products.count > 1 %}
        + {{ paired_products.count | minus:1 }}
      {% endif %}
    </div> {% endcomment %}
  </div>
   {% if template == 'product' %}
    {% for variant in product.variants limit: 1 %}
      {% for option in product.options_with_values %}
        {% if option.name == 'Choose color variant' or option.name == 'Color' %}
          {% assign variant_color = option.values[0] %}
          {% assign total_color = option.values.size %}
        {% endif %}
      {% endfor %}

      {% comment %}
     <div class="custom-variant-count vgfbfgb">
        <span class="custom-color" style="background:{{ product.metafields.custom.hexa_code.value }}"></span>
       {% assign paired_products = product.metafields.custom.pair_with_product.value %}
        {% if paired_products.count > 1 %}
          + {{ paired_products.count | minus:1 }}
        {% endif %}
      </div> {% endcomment %}
      <!-- <div class="variant_card_content variant-info d-lg-none d-md-none">
          {% if variant_color != blank %}
            {% assign file_image = variant_color | handle | append: '.png' %}
            {% assign file_image_url = file_image | file_url %}
            <span class="var_color_info">{% if file_image_url contains '?v' %}<img src="{{ file_image | file_url }}">{% endif %}+{{ total_color }}</span>
          {% endif %}
      </div> -->
    {% endfor %}
  {% endif %}

</nav>
