<style>
  .breadcrumbs {
    margin: 0 ;
  }

  .breadcrumbs__list {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .breadcrumbs__item {
    display: inline-block;
  }

  .breadcrumbs__item:not(:last-child):after {
    content: ' / ';
    display: inline-block;
    margin: 0 5px 0 2px;
    position: relative;
    vertical-align: middle;
  }

  .breadcrumbs__link {
    text-decoration: underline;
  }

  .breadcrumbs__link[aria-current="page"] {
    color: inherit;
    font-weight: normal;
    text-decoration: none;
  }

  .breadcrumbs__link[aria-current="page"]:hover,
  .breadcrumbs__link[aria-current="page"]:focus {
    text-decoration: underline;
  }
  .breadcrumbs__link {
    text-decoration: none;
}

  .breadcrumb-main-section {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 10px;
}

  .desktop_breadcum {
    display:block;
  }


  .collection-breadcrumb a{
    color: #1A1A1A;
    text-decoration: none;
  }
  @media screen and (max-width:767px){
    .breadcrumbs__link,
    .breadcrumb-main-section .active,
    .collection-breadcrumb a{
      font-size: 8px;
      line-height: 10px;
    }
    .collection-breadcrumb{
      line-height: 8px;
    }
    .support .desktop_breadcum,
    .support-write-to-us .desktop_breadcum{
    display:block;
    }
  }
</style>

