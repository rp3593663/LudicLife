  document.querySelector('.var_color_info').addEventListener('click', function() {
    document.querySelector('.product__info-wrapper').classList.toggle('show-variant');  // Toggle class
});
</script> {% endcomment %}

<script>
  // Save the last visited collection URL and title to session storage
if (window.location.pathname.includes('/collections/')) {
  const collectionLink = window.location.pathname;
  const collectionTitle = document.querySelector('h1.page-title') ? document.querySelector('h1.page-title').innerText : '';

  if (collectionTitle) {
    sessionStorage.setItem('lastCollectionURL', collectionLink);
    sessionStorage.setItem('lastCollectionTitle', collectionTitle);
  }
}

</script>