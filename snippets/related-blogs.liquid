{% comment %} Check if the current article has an associated blog {% endcomment %}
{% if blog %}
  <div class="related-blog-posts">
    <h2>Related Posts</h2>
    <ul>
      {% for related_article in blog.articles limit: 4 %}
        {% unless related_article.id == article.id %}
          <li>
            <a href="{{ related_article.url }}" title="{{ related_article.title }}">
              <img src="{{ related_article.image | img_url: 'master' }}" alt="{{ related_article.title }}" />
              <div class="related-content">
                <h3>{{ related_article.title }}</h3>
                <p>{{ related_article.excerpt | strip_html | truncate: 100 }}</p>
              </div>
            </a>
          </li>
        {% endunless %}
      {% endfor %}
    </ul>
  </div>
{% endif %}

<style>
  .related-blog-posts {
    margin-top: 40px;
    margin-bottom: 32px;
}
  .related-content {
      padding: 16px 20px;
  }

  .related-blog-posts h3 {
      font-size: 12px;
      color: #1a1a1a;
      font-weight: 800;
      line-height: 14px;
      text-align: left;
  }
  .related-blog-posts a{
    text-decoration:none;
  }

  .related-blog-posts h2 {
    font-size: 26px;
    line-height: 30px;
    margin-bottom: 32px;
    font-weight: 700;
  }

.related-blog-posts ul {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20px;
  list-style: none;
  padding: 0;
}

.related-blog-posts li {
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: center;
  transition: box-shadow 0.3s ease;
  overflow: hidden;
}

.related-blog-posts img {
  max-width: 100%;
  height: auto;
  transition: transform var(--duration-long) ease;
}

.related-blog-posts li:hover img {
  transition: transform var(--duration-long) ease;
  transform: scale(1.03);
}


.related-blog-posts p {
  font-size: 0.9em;
  color: #666;
}

  @media screen and (max-width:768px){
    .related-blog-posts ul {
      grid-template-columns: 1fr;
    }
    .related-blog-posts h2 {
      font-size: 20px;
      line-height: 22px;
      margin-bottom: 24px;
    }
  }
</style>